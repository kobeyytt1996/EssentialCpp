int main ()
{
    ifstream infile("D:\\cpp\\ex 1.5\\text.txt");
    if (! infile)
    {cerr << "unable to open"; return -1;}

    ofstream outfile("D:\\cpp\\ex 1.5\\text.sort");
    if (! outfile)
    {
        cerr << "output is wrong"; return -2;
    }

    string word;
    vector<string> whole_word;
    while (infile >> word)
    {
        whole_word.push_back(word);
    }

    cout << "unsorted sentence: \n";

    for (int ix = 0; ix < whole_word.size(); ++ix)
    {
        cout << whole_word[ix] <<' ';
    }
