    sort(whole_word.begin(), whole_word.end());

    outfile << "Sorted text:\n";
    for (int ix = 0; ix < whole_word.size(); ++ix)
    {
        outfile << whole_word[ix] <<' ';
    }
    outfile << endl;

    return 0;
}
